<h1>Create an event</h1>
<%= form_for(@event, url: events_path) do |f| %>
	<p>
	<%= f.label 'Name' %>
	<%= f.text_field :name %>
	</p>
	<p>
	<%= f.label 'Date' %>
	<%= f.date_field :date %>
	</p>
	<p>
	<%= f.label 'Description' %>
	<%= f.text_area :description %>
	</p>
	<%= f.submit 'Submit' %>
<% end %>
